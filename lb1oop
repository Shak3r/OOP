class Hero:
    def __init__(self, name, health, attack_power, defense):
        self.name = name
        self.health = health
        self.attack_power = attack_power
        self.defense = defense

    def attack(self, target):
        print(f"{self.name} атакує {target.name} і наносить 50 урону!")
        target.take_damage(40)

    def take_damage(self, amount):
        self.health -= amount
        if self.health < 0:
            self.health = 0
        print(f"{self.name} отримав {amount} урону. HP: {self.health}")

    def is_alive(self):
        if self.health > 0:
            print(f"{self.name} живий.")
            return True
        else:
            print(f"{self.name} мертвий.")
            return False

    def get_stats(self):
        print(f"-{self.name}")
        print(f"HP:{self.health}")
        print(f"Атака:{self.attack_power}")
        print(f"Захист:{self.defense}")
        print()

geralt = Hero("Геральт", 100, 50, 10)
vodianyi = Hero("Водяний", 40, 10, 0)

geralt.attack(vodianyi)

vodianyi.is_alive()

geralt.get_stats()
vodianyi.get_stats()
